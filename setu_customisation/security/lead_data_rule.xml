<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <!-- Record Rules -->
        <record id="lead_details_rule_user" model="ir.rule">
            <field name="name">User Access to Lead Details</field>
            <field name="model_id" ref="model_lead_details"/>
            <field name="domain_force">[('assign_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('scs_tatatele_integration.group_tatatele_user'))]"/>
        </record>

        <record id="lead_details_rule_admin" model="ir.rule">
            <field name="name">Admin Access to Lead Details</field>
            <field name="model_id" ref="model_lead_details"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('scs_tatatele_integration.group_tatatele_admin'))]"/>
        </record>

        <!-- Create a new security category for Branch Management -->
        <record model="ir.module.category" id="module_branch_category">
            <field name="name">Branch Management</field>
            <field name="description">Helps you manage branch user roles.</field>
            <field name="sequence">10</field>
        </record>

        <!-- Branch User Group (Default False) -->
        <record id="group_branch_user" model="res.groups">
            <field name="name">Branch User</field>
            <field name="category_id" ref="module_branch_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[]"/>
        </record>
      
        <!-- Branch Admin Group (Default False) -->
        <record id="group_branch_admin" model="res.groups">
            <field name="name">Branch Administrator</field>
            <field name="category_id" ref="module_branch_category"/>
            <field name="implied_ids" eval="[(4, ref('setu_customisation.group_branch_user'))]"/>
            <field name="users" eval="[]"/>
        </record>

        <!-- Create a new security category for Branch Management -->
        <record model="ir.module.category" id="module_meeting_management">
            <field name="name">Meeting Management</field>
            <field name="description">Helps you manage branch user roles.</field>
            <field name="sequence">10</field>
        </record>

        <!-- Branch User Group (Default False) -->
        <record id="group_meeting_user" model="res.groups">
            <field name="name">Meeting User</field>
            <field name="category_id" ref="module_meeting_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[]"/>
        </record>
        
        <!-- Branch Admin Group (Default False) -->
        <record id="group_meeting_admin" model="res.groups">
            <field name="name">Meeting Administrator</field>
            <field name="category_id" ref="module_meeting_management"/>
            <field name="implied_ids" eval="[(4, ref('setu_customisation.group_meeting_user'))]"/>
            <field name="users" eval="[]"/>
        </record>

