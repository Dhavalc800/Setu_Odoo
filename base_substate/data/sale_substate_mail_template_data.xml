<?xml version="1.0" encoding="utf-8" ?>
<odoo >
    <data noupdate="1">
        <!-- Sample Sale substate -related template -->
        <record id="mail_template_data_sale_substate_payment_verification" model="mail.template">
            <field name="name">Request for Payment Verification</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject"> Request for Payment Verification {{object.name}}</field>
            <field name="partner_to">{{ object._get_users_emails()}}</field>
            <field name="email_to">{{ object._get_users_emails()}}</field>
            <field name="use_default_to" eval="False" />
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello,
        <br />
        <br />
        Please verify the payment received against booking reference
        <span style="font-weight: bold;"  t-out="object.name or ''">S00052</span>
        <br />
        <br />
        Thank you,
        <br />
        <t t-if="user.signature">
            <br />
            <t t-out="user.signature or ''" />
        </t>
    </p>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>


        <record id="mail_template_data_sale_substate_payment_received" model="mail.template">
            <field name="name">Confirmation For The Payment Received</field>
            <field name="model_id" ref="sale.model_sale_order" />
            <field name="subject">Confirmation For The Payment Received {{object.name}}</field>
            <field name="partner_to">{{ object._get_users_emails()}}</field>
            <field name="email_to">{{ object._get_users_emails()}}</field>
            <field name="use_default_to" eval="False" />
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello,
        <br />
        Payment amounting in <span style="font-weight: bold;"  t-out="format_amount(object.amount_total, object.pricelist_id.currency_id) or ''">$ 10.00</span>
        against booking reference <span style="font-weight: bold;"  t-out="object.name or ''">S00052</span>
        has been received.
        <br />
        <br />

        Thank you,
        <br />
        <t t-if="user.signature">
            <br />
            <t t-out="user.signature or ''" />
        </t>
    </p>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True" />
        </record>
    </data>
</odoo>
