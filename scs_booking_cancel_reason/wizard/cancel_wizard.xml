<odoo>
    <record id="view_cancel_wizard_form" model="ir.ui.view">
        <field name="name">cancel.wizard.form</field>
        <field name="model">cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Cancellation">
                <group>
                    <field name="cancel_id" placeholder="Enter the reason for cancellation..." options="{'no_create': True, 'no_edit': True}"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_cancellation" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
