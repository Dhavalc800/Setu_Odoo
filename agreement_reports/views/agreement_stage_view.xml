<odoo>
    <record id="agreement_stage_form_view_inherit" model="ir.ui.view">
        <field name="name">agreement.stage.form.view.inherit</field>
        <field name="model">agreement.stage</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_stage_form_view" />
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="agreement_type_id" widget="selection"/>
                <field name="is_active"/>
            </field>
            <field name="stage_type" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>
     <record id="partner_agreement_stage_list_view_inherit" model="ir.ui.view">
        <field name="name">agreement.stage.tree.view.inherit</field>
        <field name="model">agreement.stage</field>
        <field name="inherit_id" ref="agreement_legal.partner_agreement_stage_list_view" />
        <field name="arch" type="xml">
            <field name="stage_type" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="name" position="after">
                <field name="agreement_type_id"/>
            </field>
        </field>
     </record>

    <record model="ir.ui.view" id="agreement_legal.partner_agreement_stage_search_view">
        <field name="name">Agreement Stage Search</field>
        <field name="model">agreement.stage</field>
        <field name="arch" type="xml">
            <search string="Agreements Stage Search">
                <field name="name" />
                <separator />
                <filter
                    name="archived"
                    string="Archived"
                    domain="[('active', '=', False)]"
                />
                <group name="groupby">
                    <filter
                        name="agreement_type_id_groupby"
                        string="Type"
                        context="{'group_by': 'agreement_type_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

</odoo>
