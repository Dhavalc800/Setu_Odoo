                        <tr>
                            <td colspan="4">
                                <span>Customer's seal and Signature:
                                </span>
<!--                                <br/>-->
<!--                                <br/>-->
                            </td>
                            <td class="text-end" colspan="4" align="right">
                                <t t-set="operating_company" t-value="request.env['operating.company'].search([('partner_id', '=', doc.bank_acc_id.partner_id.id)])"/>
                                <img  t-if="operating_company and operating_company.stamp" t-att-src="image_data_uri(operating_company.stamp)" style="max-height:90pt;max-width:130%"/>
                                <br/>
                                <span>Authorised Signatory
