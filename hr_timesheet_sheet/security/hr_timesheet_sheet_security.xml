<odoo>
    <data noupdate="1">
        <record model="ir.rule" id="timesheet_sheet_comp_rule">
            <field name="name">Timesheet sheet multi-company</field>
            <field
                name="model_id"
                search="[('model','=','hr_timesheet.sheet')]"
                model="ir.model"
            />
            <field name="global" eval="True" />
            <field
                name="domain_force"
            >['|',('company_id','=',False),('company_id','in',company_ids)]</field>
        </record>
        
    <!-- Record Rule:- Resource can see the only own timesheet -->
    <record id="hr_timesheet_resource_rec_rule" model="ir.rule">
        <field name="name">Resource can see the only own timesheet</field>
        <field name="model_id" ref="model_hr_timesheet_sheet"/>
        <field name="active">True</field>
        <field name="domain_force">[('employee_id.user_id','child_of',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_user'))]"/>
        <field name='perm_create' eval='True' />
        <field name='perm_read' eval='True' />
        <field name='perm_unlink' eval='True' />
        <field name='perm_write' eval='True' />
    </record>

    <!-- Group Timesheet Approver can see own timesheet and his team timesheet -->
    <record id="hr_timesheet_approver_rec_rule" model="ir.rule">
        <field name="name">Approver can see own timesheet and his team</field>
        <field name="model_id" ref="model_hr_timesheet_sheet"/>
        <field name="active">True</field>
        <field name="domain_force">[('employee_id.active','=',1),'|',('employee_id.user_id','child_of',user.id),('employee_id.parent_id.user_id','child_of',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_approver'))]"/>
        <field name='perm_create' eval='True' />
        <field name='perm_read' eval='True' />
        <field name='perm_unlink' eval='True' />
        <field name='perm_write' eval='True' />
    </record>

    <!-- Group Timesheet Manager can see All timesheet -->
    <record id="hr_timesheet_manager_rec_rule" model="ir.rule">
        <field name="name">Timesheet Manager can see All timesheet</field>
        <field name="model_id" ref="model_hr_timesheet_sheet"/>
        <field name="active">True</field>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('hr_timesheet.group_timesheet_manager'))]"/>
        <field name='perm_create' eval='True' />
        <field name='perm_read' eval='True' />
        <field name='perm_unlink' eval='True' />
        <field name='perm_write' eval='True' />
    </record>


