<!-- wizard view: bulk_update_user_wizard_view.xml -->
<odoo>
    <record id="view_bulk_update_user_wizard_form" model="ir.ui.view">
        <field name="name">bulk.update.user.wizard.form</field>
        <field name="model">bulk.update.user.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Update Salesperson">
                <group>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="action_update_users" type="object" string="Update" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_to_user" model="ir.actions.server">
        <field name="name">Assign to User</field>
        <field name="model_id" ref="setu_dialer.model_lead_management"/>
        <field name="binding_model_id" ref="setu_dialer.model_lead_management"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_assign_user_wizard()
        </field>
    </record>
</odoo>
