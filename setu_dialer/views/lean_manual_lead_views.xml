<odoo>
    <!-- Tree View -->
    <record id="view_lean_manual_lead_tree" model="ir.ui.view">
        <field name="name">lean.manual.lead.tree</field>
        <field name="model">lean.manual.lead</field>
        <field name="arch" type="xml">
            <tree string="Manual Leads">
                <field name="employee_id"/>
                <field name="company_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="bdm"/>
                <field name="service"/>
                <field name="source"/>
                <field name="disposition_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_lean_manual_lead_form" model="ir.ui.view">
        <field name="name">lean.manual.lead.form</field>
        <field name="model">lean.manual.lead</field>
        <field name="arch" type="xml">
            <form string="Manual Lead">
                <sheet>
                    <group string="Lead Info" col="2">
                        <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="company_name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="state"/>
                        <field name="source"/>
                        <field name="service"/>
                        <field name="bdm"/>
                        <field name="slab"/>
                    </group>

                    <group string="Lead Disposition" col="2">
                        <field name="dynamic_summary"/>
                        <field name="disposition_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="remark" colspan="2"/>
                        <field name="interested" invisible="1"/>
                        <field name="opportunity_name" attrs="{'invisible': [('interested', '=', False)]}"/>
                        <field name="expected_revenue" attrs="{'invisible': [('interested', '=', False)]}"/>
                    </group>

                    <notebook>
                        <page string="Call Details">
                            <group col="2">
                                <field name="client_name" readonly="1"/>
                                <field name="caller_number" readonly="1"/>
                                <field name="destination_number" readonly="1"/>
                                <field name="overall_call_status" readonly="1"/>
                                <field name="caller_operator_name" readonly="1"/>
                                <field name="destination_operator_name" readonly="1"/>
                                <field name="call_type" readonly="1"/>
                                <field name="caller_circle" readonly="1"/>
                                <field name="destination_circle" readonly="1"/>
                                <field name="call_duration" readonly="1"/>
                                <field name="conversation_duration" readonly="1"/>
                                <field name="call_date" readonly="1"/>
                                <field name="caller_status" readonly="1"/>
                                <field name="destination_status" readonly="1"/>
                                <field name="hangup_cause" readonly="1"/>
                                <field name="recording" readonly="1" widget="url"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>

        </field>
    </record>

    <record id="view_lean_manual_lead_search" model="ir.ui.view">
        <field name="name">lean.manual.lead.search</field>
        <field name="model">lean.manual.lead</field>
        <field name="arch" type="xml">
            <search string="Search Manual Leads">
                <!-- Searchable Fields -->
                <field name="company_name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="state"/>
                <field name="source"/>
                <field name="employee_id"/>
                <field name="disposition_id"/>

                <!-- Filters Section -->
                <filter string="My Leads" name="my_leads" domain="[('employee_id', '=', uid)]"/>
                <filter string="With Email" name="with_email" domain="[('email', '!=', False)]"/>
                <filter string="With Phone" name="with_phone" domain="[('phone', '!=', False)]"/>
                <filter string="With Company Name" name="with_company" domain="[('company_name', '!=', False)]"/>
                <filter string="Create Date" name="filter_create_date" date="create_date"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Employee" name="group_by_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Disposition" name="group_by_dispo" context="{'group_by': 'disposition_id'}"/>
                    <filter string="State" name="group_by_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_lean_manual_lead_pivot" model="ir.ui.view">
        <field name="name">lean.manual.lead.pivot</field>
        <field name="model">lean.manual.lead</field>
        <field name="arch" type="xml">
            <pivot string="Manual Lead Analysis">
                <field name="disposition_id" type="row"/>
            </pivot>
        </field>
    </record>


    <record id="action_lean_manual_lead" model="ir.actions.act_window">
        <field name="name">Manual Leads</field>
        <field name="res_model">lean.manual.lead</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>
</odoo>
