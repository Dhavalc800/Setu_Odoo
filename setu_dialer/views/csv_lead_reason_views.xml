<odoo>
    <record id="csv_lead_reason_tree" model="ir.ui.view">
        <field name="name">csv.lead.reason.tree</field>
        <field name="model">csv.lead.reason</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="csv_lead_reason_form" model="ir.ui.view">
        <field name="name">csv.lead.reason.form</field>
        <field name="model">csv.lead.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_csv_lead_reason" model="ir.actions.act_window">
        <field name="name">Csv Lead Reason</field>
        <field name="res_model">csv.lead.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No CSV Lead Reason Found!
            </p>
        </field>
    </record>

</odoo>
