<odoo>
    <!-- Tree View -->
    <record id="view_offline_hbab_service_tree" model="ir.ui.view">
        <field name="name">offline.hbab.status.tree</field>
        <field name="model">offline.hbab.status</field>
        <field name="arch" type="xml">
            <tree string="Offline HBAB Status">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_offline_hbab_service_form" model="ir.ui.view">
        <field name="name">offline.hbab.status.form</field>
        <field name="model">offline.hbab.status</field>
        <field name="arch" type="xml">
            <form string="Offline HBAB status">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_offline_hbab_status" model="ir.actions.act_window">
        <field name="name">Offline HBAB Status</field>
        <field name="res_model">offline.hbab.status</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_offline_hbab_status"
              name="Offline HBAB Status"
              parent="sale.menu_sale_config"
              action="action_offline_hbab_status"/>
</odoo>