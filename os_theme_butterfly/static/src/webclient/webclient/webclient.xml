<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="os_theme_butterfly.WebClient" owl="1">
        <div class="os-app-root h-100" t-ref="root"
             t-attf-class="chatter-position-{{userThemeService.os_chatter_position}} {{userThemeService.os_theme_mode}}"
             t-att-class="{'o_is_superuser': user.userId === 1, 'o_rtl': localization.direction === 'rtl', 'os-fixed-hf-list-view': companyThemeService.os_list_view_sticky_header_footer }">
            <ul t-if="userThemeService.os_has_group_theme_admin" class="os-sticky-toolbar d-none d-lg-block os_draggable">
                <OsZoom t-if="userThemeService.os_display_zoom_in_out"/>
                <OsFullScreenMenu t-if="userThemeService.os_display_full_screen"/>
                <li t-if="userService.isAdmin or userThemeService.os_has_group_theme_admin" class="os-settings-general">
                    <a class="toggle tipinfo" data-target="generalSettingPanel" href="#"
                       data-tippy-content="ADMIN Theme Settings" data-tippy-placement="left"
                       aria-label="ADMIN Theme Settings">
                        <em class="icon osi osi-setting-alt"/>
                    </a>
                </li>
                <li t-if="companyThemeService.os_show_user_settings or userService.isAdmin" class="os-settings-user">
                    <a class="toggle tipinfo" data-target="userSettingPanel" href="#"
                       data-tippy-content="User Theme Settings" data-tippy-placement="left"
                       aria-label="User Theme Settings">
                        <em class="icon osi osi-color-palette"/>
                    </a>
                </li>
            </ul>

            <OsSettingsPanelGeneral t-if="userService.isAdmin or userThemeService.os_has_group_theme_admin"/>

            <OsSettingsPanelUser t-if="companyThemeService.os_show_user_settings or userService.isAdmin"/>

            <OsZoomContent t-if="userThemeService.os_display_zoom_in_out"/>

            <OsTodo t-if="userThemeService.os_display_todo_list"/>

            <div class="os-main h-100">
                <t t-if="userThemeService.os_show_sidebar or isMobile">
                    <OsSideBar/>
                </t>
                <div class="os-wrap h-100">
                    <NavBar/>
                    <OsHeaderToolsBar/>
                    <div class="os-content h-100"
                         t-att-class="userThemeService.os_header_tools_bar_fixed ? 'os-header-toolsbar-shown': ''">
                        <OsWebRibbon t-if="companyThemeService.os_activate_web_ribbon" service="companyThemeService"/>
                        <ActionContainer class="'h-100'"/>
                        <MainComponentsContainer/>
                        <OsScrollToTop/>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
