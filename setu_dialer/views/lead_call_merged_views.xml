<odoo>
    <data>
        <record id="view_lead_call_merged_tree" model="ir.ui.view">
            <field name="name">lead.call.merged.tree</field>
            <field name="model">lead.call.merged</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lead_id"/>
                    <field name="user_id"/>
                    <field name="campaign_id"/>
                    <field name="call_duration"/>
                    <field name="destination_number"/>
                    <field name="disposition_id"/>
                    <field name="source_model" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="view_lead_call_merged_form" model="ir.ui.view">
            <field name="name">lead.call.merged.form</field>
            <field name="model">lead.call.merged</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="lead_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="user_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="campaign_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="call_time" invisible="0"/>
                            <field name="phone" invisible="1"/>
                            <field name="disposition_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="is_interested" invisible="1"/>
                            <field name="opportunity_name" attrs="{'invisible': [('is_interested', '!=', True)]}"/>
                            <field name="expected_revenue" attrs="{'invisible': [('is_interested', '!=', True)]}"/>
                            <!-- <field name="lead_list_id"/> -->
                        </group>
                        <notebook>
                            <page string="Call Details">
                                <group>
                                    <field name="client_name"/>
                                    <field name="caller_number"/>
                                    <field name="destination_number" string="Client Number"/>
                                    <field name="call_datetime"/>
                                    <field name="client_correlation_id"/>
                                    <field name="overall_call_status"/>
                                    <field name="caller_operator_name"/>
                                    <field name="destination_operator_name"/>
                                    <field name="call_type"/>
                                    <field name="caller_circle"/>
                                    <field name="destination_circle"/>
                                    <field name="call_duration"/>
                                    <field name="conversation_duration"/>
                                    <field name="call_date"/>
                                    <field name="caller_status"/>
                                    <field name="destination_status"/>
                                    <field name="hangup_cause"/>
                                    <field name="recording" widget="audio_field"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_lead_call_merged_pivot" model="ir.ui.view">
            <field name="name">lead.call.merged.pivot</field>
            <field name="model">lead.call.merged</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <pivot>
                    <field name="disposition_id" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="view_lead_call_merged_action" model="ir.actions.act_window">
            <field name="name">CDR Info</field>
            <field name="res_model">lead.call.merged</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>
    </data>
</odoo>