<odoo>
    <!-- Tree View -->
    <record id="view_offline_hbab_service_tree" model="ir.ui.view">
        <field name="name">offline.hbab.service.tree</field>
        <field name="model">offline.hbab.service</field>
        <field name="arch" type="xml">
            <tree string="Offline HBAB Services">
                <field name="customer_name"/>
                <field name="contact_number"/>
                <field name="customer_type"/>
                <field name="services_type"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_offline_hbab_service_form" model="ir.ui.view">
        <field name="name">offline.hbab.service.form</field>
        <field name="model">offline.hbab.service</field>
        <field name="arch" type="xml">
            <form string="Offline HBAB Service">
                <sheet>
                    <group>
                        <field name="customer_name"/>
                        <field name="contact_number"/>
                        <field name="customer_type"/>
                        <field name="services_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_offline_hbab_service" model="ir.actions.act_window">
        <field name="name">Offline HBAB Services</field>
        <field name="res_model">offline.hbab.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_offline_hbab_service"
              name="Offline HBAB Services"
              parent="sale.sale_menu_root"
              action="action_offline_hbab_service"/>
</odoo>
