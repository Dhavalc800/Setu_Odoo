<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Record Rule::- Management And HR Dept.can see All Timesheet Lines -->
	<record id="management_see_all_ts_lines_rule" model="ir.rule">
	    <field name="name">HR Manager can see all Timesheet Lines.</field>
	    <field name="model_id" ref="analytic.model_account_analytic_line" />
	    <field name="domain_force">[(1,'=',1)]</field>
	    <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"  />
	    <field name='perm_create' eval='True' />
	    <field name='perm_read' eval='True' />
	    <field name='perm_unlink' eval='True' />
	    <field name='perm_write' eval='True' />
	</record> 

    <!-- Record Rule::- Project Manager can see timesheet lines of their project -->
 	<record id="timsheet_line_project_mngr_rule" model="ir.rule">
	    <field name="name">Project Manager can see timesheet lines of their
	        project
	    </field>
	    <field name="model_id" ref="analytic.model_account_analytic_line" />
	    <field name="active">True</field>
	    <field name="domain_force">[('project_id.user_id','=',user.id)]</field>
	    <field name="groups" eval="[(4, ref('project_config.group_project_manager_custom'))]" />
	    <field name='perm_create' eval='True' />
	    <field name='perm_read' eval='True' />
	    <field name='perm_unlink' eval='True' />
	    <field name='perm_write' eval='True' />
	</record> 
    
     <!-- Record Rule::- Reporting Manager can see timesheets of themselves and their subordinates-->
 	<record id="timsheet_line_rpt_mngr_rule" model="ir.rule">
	    <field name="name">Reporting Manager can see the timesheet lines of his team</field>
	    <field name="model_id" ref="analytic.model_account_analytic_line"/>
	    <field name="active">True</field>
		<field name="domain_force">[('employee_id.active','=',1),'|','|',('employee_id.parent_id','child_of',user.employee_ids.id),('user_id', '=', user.child_ids.ids), ('employee_id.parent_id.user_id', 'child_of', user.child_ids.ids)]</field>
	    <field name="groups" eval="[(4, ref('hr_config.group_reporting_manager'))]"/>
	    <field name='perm_create' eval='True' />
	    <field name='perm_read' eval='True' />
	    <field name='perm_unlink' eval='True' />
	    <field name='perm_write' eval='True' />
	</record>

    <!-- Record Rule:- Resource can see the only own timesheet lines of his team -->
 	<record id="hr_timesheet_line_resource_rec_rule" model="ir.rule">
	    <field name="name">Resource can see the only own timesheet lines of his team</field>
	    <field name="model_id" ref="analytic.model_account_analytic_line"/>
	    <field name="active">True</field>
	    <field name="domain_force">[('user_id','=',user.id)]</field>
	    <field name="groups" eval="[(4, ref('hr_config.group_hr_resource'))]"/>
	    <field name='perm_create' eval='True' />
	    <field name='perm_read' eval='True' />
	    <field name='perm_unlink' eval='True' />
	    <field name='perm_write' eval='True' />
	</record>

