<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mail_template_project_task" model="mail.template">
        <field name="name">Project Task</field>
        <field name="model_id" ref="scs_project_extended.model_project_task"/>
        <field name="subject">Project Task Creation</field>
        <field name="email_from">{{ user.email_formatted }}</field>
        <field name="email_to">{{ (object.project_id.user_id.partner_id.email) }}</field>
        <field name="auto_delete" eval="False"/>
        <field name="description">A new Task has been created</field>
        <field name="lang">${{object.partner_id.lang}}</field>
        <field name="body_html" type="html">
            <div>
                <t t-set="partner" t-value="object.partner_id"></t>
                <table border="0" cellpadding="0" cellspacing="0"
                       style="box-sizing:border-box;border-collapse:collapse;width:100%; margin:0;" width="100%">
                    <tbody>
                        <tr>
                            <td valign="top" style="font-size: 14px;">
                                Hello <t t-esc="object.project_id.user_id.name"/>,<br></br>
                            </td>
                        </tr>
                        <tr>
                            <td valign="top" style="font-size: 14px;">
                                A new Task has been created for
                                <t t-esc="object.project_id.name"/> Project
                                <br></br>
                                <br></br>
                                <br></br>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </field>
    </record>


     <record id="ir_cron_auto_assigned_task" model="ir.cron">
        <field name="name">Task: Auto Assigned project task</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now())" />
        <field name="doall" eval="False"/>
        <field name="active" eval="False"/>
        <field name="model_id" ref="model_project_project"/>
        <field name="code">model.auto_assigned_user_on_task()</field>
        <field name="state">code</field>
    </record>

</odoo>
