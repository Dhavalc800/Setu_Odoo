<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.FormStatusIndicator" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_form_button_save')]" position="attributes">
            <attribute name="class" remove="btn-light" add="btn-link me-1" separator=" "/>
        </xpath>
        <xpath expr="//button[hasclass('o_form_button_cancel')]" position="attributes">
            <attribute name="class" remove="btn-light" add="btn-link me-1" separator=" "/>
        </xpath>
    </t>
