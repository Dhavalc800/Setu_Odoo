<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="rule_sale_person_collection" model="ir.rule">
        <field name="name">Sales person can see their own collection</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="model_id" ref="model_sale_person_collection_report"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>


    <record id="sale_person_collection_team_rule" model="ir.rule">
        <field name="name">Sales person can see their Team collection</field>
        <field name="model_id" ref="model_sale_person_collection_report"/>
        <field name="domain_force">['|','|','|',('user_id','=',user.id),('user_id','=',False), ("team_id", "=", user.sale_team_id.id),("team_id", "in", user.crm_team_member_ids.crm_team_id.ids)]</field>
        <field name="groups" eval="[(4, ref('sales_team_security.group_sale_team_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="branch_manager_team_collection_team_rule" model="ir.rule">
        <field name="name">Branch Manager can see their Team collection</field>
        <field name="model_id" ref="model_sale_person_collection_report"/>
        <field name="domain_force">[('team_id.branch_manager_id', '=', user.id),('team_id.branch_manager_id', '!=', False),]</field>
        <field name="groups" eval="[(4, ref('sales_team_security.group_booking_branch_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="rule_sale_person_collection_admin" model="ir.rule">
        <field name="name">Admin collection rule</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        <field name="model_id" ref="model_sale_person_collection_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
