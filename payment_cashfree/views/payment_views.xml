<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_cashfree" model="ir.ui.view">
        <field name="name">payment.provider.form.inherit</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr='//group[@name="provider_credentials"]' position='after'>
                <group attrs="{'invisible': [('code', '!=', 'cashfree')]}">
                    <field name="cashfree_app_id"/>
                    <field name="cashfree_secret_key" password="True"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>