<odoo>
    <record id="view_import_refund_excel_form" model="ir.ui.view">
        <field name="name">import.refund.excel.form</field>
        <field name="model">import.refund.excel</field>
        <field name="arch" type="xml">
            <form string="Import Refunds">
                <group>
                    <field name="excel_file"/>
                    <field name="file_name"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import_refunds" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_refund_excel" model="ir.actions.act_window">
        <field name="name">Import Refunds</field>
        <field name="res_model">import.refund.excel</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_refund_excel" name="Import Refunds" parent="sale.menu_sale_config" action="action_import_refund_excel"/>

</odoo>