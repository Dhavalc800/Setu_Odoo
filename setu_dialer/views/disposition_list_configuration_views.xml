<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_disposition_list_tree" model="ir.ui.view">
        <field name="name">disposition.list.tree</field>
        <field name="model">disposition.list.configuration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="disposition_ids" options="{'no_create': True}" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_disposition_list_form" model="ir.ui.view">
        <field name="name">disposition.list.form</field>
        <field name="model">disposition.list.configuration</field>
        <field name="arch" type="xml">
            <form string="Disposition List">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="disposition_ids" options="{'no_create': True, 'no_open': True}" widget="many2many_tags"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_disposition_list" model="ir.actions.act_window">
        <field name="name">Disposition List</field>
        <field name="res_model">disposition.list.configuration</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
