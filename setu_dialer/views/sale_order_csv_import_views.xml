<odoo>
    <record id="view_sale_order_csv_import_wizard" model="ir.ui.view">
        <field name="name">sale.order.csv.import.wizard</field>
        <field name="model">sale.order.csv.import</field>
        <field name="arch" type="xml">
            <form string="Import Sale Order Data">
                <group>
                    <field name="filename"/>
                    <field name="upload_file" filename="filename"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_process_file" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_csv_import" model="ir.actions.act_window">
        <field name="name">Import Sale Order Data</field>
        <field name="res_model">sale.order.csv.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_sale_order_csv_import"
          name="Import Sale Order CSV"
          parent="sale.sale_menu_root"
          action="action_sale_order_csv_import"
          sequence="50"/>

</odoo>