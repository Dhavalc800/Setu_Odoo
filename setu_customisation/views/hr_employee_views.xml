<odoo>
    <data>
        <record id="action_employee_hold" model="ir.actions.server">
            <field name="name">Put on Hold</field>
            <field name="model_id" ref="hr.model_hr_employee"></field>
            <field name="binding_model_id" ref="hr.model_hr_employee"></field>
            <field name="groups_id" eval="[(4, ref('base.group_erp_manager'))]"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_set_hold()
            </field>
        </record>

        <record id="action_employee_unhold" model="ir.actions.server">
            <field name="name">Remove Hold</field>
            <field name="model_id" ref="hr.model_hr_employee"></field>
            <field name="binding_model_id" ref="hr.model_hr_employee"></field>
            <field name="groups_id" eval="[(4, ref('base.group_erp_manager'))]"/>
            <field name="state">code</field>
            <field name="code">
                action = records.action_unset_hold()
            </field>
        </record>

        <record id="view_employee_form_hold" model="ir.ui.view">
            <field name="name">hr.employee.form.hold</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='coach_id']" position="after">
                    <field name="hold" invisible="1"/>
                    <field name="is_send_msg" groups="base.group_system"/>
                </xpath>

                <xpath expr="//widget[@name='web_ribbon']" position="after">
                     <widget name="web_ribbon" title="On Hold" bg_color="bg-warning"
                        attrs="{'invisible': [('hold', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="hr_employee_search_view" model="ir.ui.view">
            <field name="name">hr.employee.search.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter string="On Hold" name="hold_filter" domain="[('hold', '=', True)]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>