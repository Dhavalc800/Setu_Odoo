    <record id="hr_timesheet_group_reporting_manager_rule" model="ir.rule">
        <field name="name">Reporting Manager can see his team timesheet</field>
        <field name="model_id" ref="model_hr_timesheet_sheet"/>
        <field name="active">True</field>
        <field name="domain_force">[('employee_id.active','=',1),'|','|',('employee_id.parent_id','child_of',user.employee_ids.id),('employee_id.user_id', '=' ,user.id),('employee_id.parent_id.user_id','child_of',user.id)]</field>
        <field name="groups" eval="[(4, ref('hr_config.group_reporting_manager'))]"/>
