<odoo>
    <data>
        <record id="view_external_db_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.external.db</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="External DB Connection" string="External DB Connection" groups="base.group_system">
                        <h2>External MySQL Configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="mysql_host"/>
                                    <div class="text-muted">Define the MySQL server host address.</div>
                                    <div class="mt16">
                                        <field name="mysql_host" class="w-75"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="mysql_user"/>
                                    <div class="text-muted">Define the MySQL username.</div>
                                    <div class="mt16">
                                        <field name="mysql_user" class="w-75"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="mysql_password"/>
                                    <div class="text-muted">Define the MySQL password.</div>
                                    <div class="mt16">
                                        <field name="mysql_password" password="True" class="w-75"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="mysql_database"/>
                                    <div class="text-muted">Define the MySQL database name.</div>
                                    <div class="mt16">
                                        <field name="mysql_database" class="w-75"/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="mysql_checker"/>
                                    <div class="text-muted">Define the MySQL Checker.</div>
                                    <div class="mt16">
                                        <field name="mysql_checker" class="w-75"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>