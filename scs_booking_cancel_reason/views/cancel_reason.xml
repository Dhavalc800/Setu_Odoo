<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="cancel_reason_view_form" model="ir.ui.view">
        <field name="name">cancel.reason.form</field>
        <field name="model">cancel.reason</field>
        <field name="arch" type="xml">
            <form string="Lost Reason">
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" placeholder="e.g. Too expensive" class="mb16"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cancel_reason_view_tree" model="ir.ui.view">
        <field name="name">cancel.reason.tree</field>
        <field name="model">cancel.reason</field>
        <field name="arch" type="xml">
            <tree string="Cancel Reasons" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_cancel_reason" model="ir.actions.act_window">
        <field name="name">Cancel Reasons</field>
        <field name="res_model">cancel.reason</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cancel_reason"
              name="Booking Cancel Reasons"
              parent="sale.menu_sale_config"
              action="action_cancel_reason"
              sequence="70"/>
</odoo>
