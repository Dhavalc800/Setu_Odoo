<odoo>
	<record id="product_template_form_view_dependent_project_scs" model="ir.ui.view">
        <field name="name">product.template.inherit.sale.projectform</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale_project.product_template_form_view_invoice_policy_inherit_sale_project"/>
        <field name="arch" type="xml">
        	<field name="project_id" position="after">
        		<field name="dependent_project_ids" widget="many2many_tags"/>
        	</field>
        </field>
    </record>

    <record id="hr_employee_view_form_inherit_custom_field" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.custom.field</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="before">
                <field name="date_of_join"/>
                <field name="identification_no"/>
            </xpath>
            <xpath expr="//field[@name='identification_id']" position="attributes">
                <attribute name="string">Aadhar Card</attribute>
            </xpath>
            <xpath expr="//field[@name='identification_id']" position="after">
                <field name="l10n_in_pan"/>
            </xpath>
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="id" string="Emp id"/>
            </xpath>
            <xpath expr="//page[@name='hr_settings']/group/group[@name='active_group']/field[@name='user_id']" position="after">
                <field name="salary" groups="hr.group_hr_manager"/>
                <field name="branch_id"/>
            </xpath>
        </field>
    </record>


    <record id="view_employee_tree_inherited" model="ir.ui.view">
        <field name="name">hr.employee.tree.inherited</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="id" string="Emp ID"/>
            </xpath>
        </field>
    </record>

</odoo>
