<odoo>
    <!-- Wizard Action -->
    <record id="action_project_task_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Tasks to XLSX</field>
        <field name="res_model">project.task.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add to Action dropdown using server action -->
    <record id="project_task_export_action" model="ir.actions.server">
        <field name="name">Export Tasks XLSX</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="binding_model_id" ref="project.model_project_task"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            action = {
                'type': 'ir.actions.act_window',
                'res_model': 'project.task.export.wizard',
                'view_mode': 'form',
                'target': 'new',
            }
        </field>
    </record>
</odoo>
