<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sale_person_monthly_target_line_tree_view" model="ir.ui.view">
        <field name="name">sale.person.monthly.target.tree.view</field>
        <field name="model">sale.person.monthly.target</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date_from" optional="hide"/>
                <field name="date_to" optional="hide"/>
                <field name="user_id"/>
                <field name="employee_id" optional="hide" />
                <field name="sale_person_target_id" optional="hide"/>
                <field name="amount" string="Target"/>
                <field name="collection_amount" string="Collection"/>
                <field name="pending_amount" string="Pending"/>
                <field name="percentage" string="Percentage(%)" widget="percentage"/>
            </tree>
        </field>
    </record>
</odoo>
