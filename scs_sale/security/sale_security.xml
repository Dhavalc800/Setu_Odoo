<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="group_hide_mobile_number" model="res.groups">
        <field name="name">Hide Mobile Number</field>
        <field name="comment">
            The Mobile Number will remain confidential for this user.</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_hide_ca_number" model="res.groups">
        <field name="name">Hide CA Number</field>
        <field name="comment">
            The CA Number will remain confidential for this user.</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="rule_sale_person" model="ir.rule">
        <field name="name">Sales person can see their own</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '!=', False)]</field>
    </record>

    <record id="rule_sale_person_commisson_percentage" model="ir.rule">
        <field name="name">Salesperson's Commission Document Access Rule</field>
        <field name="groups" eval="[(4, ref('sales_team_security.group_sale_team_manager')), (4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[('gamification_data_ids.salesperson_id', '=', user.id)]</field>
        <field name='perm_create' eval='False'/>
        <field name='perm_unlink' eval='False'/>
    </record>

    <record id="rule_sale_line_person_commission_percentage" model="ir.rule">
        <field name="name">Salesperson's Commission order line Access Rule</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="model_id" ref="sale.model_sale_order_line"/>
        <field name="domain_force">[('order_id.gamification_data_ids.salesperson_id', '=', user.id)]</field>
        <field name='perm_create' eval='False'/>
        <field name='perm_unlink' eval='False'/>
    </record>

</odoo>
