<odoo>
    <data>
        <record id="res_config_settings_view_form_aws_s3" model="ir.ui.view">
            <field name="name">res.config.view.inherited.aws.configuration</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="450" />
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="emails" position="after">
                    <div id="aws_details">
                        <h2>AWS Credentials</h2>
                        <div class="row mt16 o_settings_container" name="aws_details_credentiols'">
                            <div class="content-group">
                                <div class="row mt16" id="aws3_region_name">
                                    <label string="AWS Region Name" for="aws3_region_name"
                                        class="col-lg-3 o_light_label" />
                                    <field name="aws3_region_name" class="ml-2" modifiers="{}" />
                                </div>
                                <div class="row mt16" id="aws3_access_key">
                                    <label string="AWS Access Key" for="aws3_access_key"
                                        class="col-lg-3 o_light_label" />
                                    <field name="aws3_access_key" class="ml-2" modifiers="{}" />
                                </div>
                                <div class="row mt16" id="aws3_secret_key">
                                    <label string="AWS Secret Key Secret" for="aws3_secret_key"
                                        class="col-lg-3 o_light_label" />
                                    <field name="aws3_secret_key" password="True" class="ml-2"
                                        modifiers="{}" />
                                </div>
                                <div class="row mt16" id="aws3_bucket_name">
                                    <label string="AWS Bucket Name" for="aws3_bucket_name"
                                        class="col-lg-3 o_light_label" />
                                    <field name="aws3_bucket_name" class="ml-2" modifiers="{}" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>