<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.CalendarController.controlButtons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_calendar_button_today')]" position="replace"/>
        <xpath expr="//button[hasclass('o_calendar_button_next')]" position="after">
            <button class="btn btn-dim btn-white btn-outline-light mx-1 o_calendar_button_today"
                    t-on-click.stop="() => this.setDate('today')">
                Today
            </button>
        </xpath>
        <xpath expr="//button[hasclass('o_calendar_button_prev')]" position="attributes">
            <attribute name="class" remove="btn-primary" add="btn-dim btn-white btn-outline-light mx-1" separator=" "/>
        </xpath>
        <xpath expr="//button[hasclass('o_calendar_button_prev')]//i" position="replace">
            <i class="osi osi-back-ios"/>
        </xpath>
        <xpath expr="//button[hasclass('o_calendar_button_next')]" position="attributes">
            <attribute name="class" remove="btn-primary" add="btn-dim btn-white btn-outline-light mx-1" separator=" "/>
        </xpath>
        <xpath expr="//button[hasclass('o_calendar_button_next')]//i" position="replace">
            <i class="osi-forward-ios"/>
        </xpath>
        <xpath expr="//DropdownItem" position="attributes">
            <attribute name="class">`o_calendar_button_${scale} btn btn-white rounded-0 text-uppercase`</attribute>
        </xpath>
    </t>
</templates>