<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_attendance_res_config_settings" model="ir.ui.view">
        <field name="name">hr.attendance.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_attendance.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="API Settings">
                    <h2>API Settings</h2>
                    <div class="row mt16 o_settings_container">
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_url"/>
                                <div class="row">
                                    <div class="text-muted col-lg-10">
                                        Define the API URL for integration.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="api_url" required="1" class="w-75"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="api_key"/>
                                <div class="row">
                                    <div class="text-muted col-lg-10">
                                        Define the API key for integration.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="api_key" required="1" class="w-75"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="from_date" string="From Date"/>
                                <div class="row">
                                    <div class="text-muted col-lg-10">
                                        Define the start date for the integration.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="from_date" class="w-75"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="to_date" string="To Date"/>
                                <div class="row">
                                    <div class="text-muted col-lg-10">
                                        Define the end date for the integration.
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="to_date" class="w-75"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
