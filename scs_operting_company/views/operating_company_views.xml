<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_operating_company_form" model="ir.ui.view">
            <field name="name">operating.company.form</field>
            <field name="model">operating.company</field>
            <field name="arch" type="xml">
                <form string="Company">
                  <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Operating Company"/>
                        </h1>
                    </div>
                    <notebook colspan="4">
                        <page string="General Information" name="general_info">
                            <group>
                                <group>
                                    <field name="partner_id" string="Contact" readonly="1" required="0" groups="base.group_no_one"/>
                                    <label for="street" string="Address"/>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}'/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                    </div>
                                    <field name="vat"/>
                                    <field name="company_registry"/>
                                    <field name="sequence_id" required="1"/>
                                </group>
                                <group>
                                    <field name="phone" class="o_force_ltr"/>
                                    <field name="mobile" class="o_force_ltr"/>
                                    <field name="email"/>
                                    <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                                    <field name="fiscal_position_id"  options="{'no_create_edit': True, 'no_create': True}"/>
                                    <field name="stamp" />
                                    <!-- <field name="bank_account_id" options="{'no_create': True, 'no_create_edit': True}"/> -->
                                </group>
                            </group>
                        </page>
                        <page string="Payment Providers" name="payment_provider">
                            <field name="payment_provider_ids"/>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_operating_company_tree" model="ir.ui.view">
            <field name="name">Operating.company.tree</field>
            <field name="model">operating.company</field>
            <field name="arch" type="xml">
                <tree string="Operating Companies">
                    <field name="name"/>
                    <field name="sequence_id"/>
                </tree>
            </field>
        </record>
        <record id="action_operating_company_form" model="ir.actions.act_window">
            <field name="name">Operating Companies</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operating.company</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a operating company
              </p>
            </field>
        </record>
        <menuitem action="action_operating_company_form" id="menu_action_operating_company_form" parent="base.menu_users"/>
    </data>
</odoo>
