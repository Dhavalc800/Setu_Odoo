<odoo>
    <data>
        <!-- Action & Tree View -->
        <record id="action_hr_employee_tree_manual" model="ir.actions.act_window">
            <field name="name">Employees (Manual Attendance)</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('is_manually_attendance', '=', True)]</field>
        </record>

        <record id="hr_employee_add_checkin_action" model="ir.actions.server">
            <field name="name">Add Check-in</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_type">action</field>
            <field name="code">
                action = records.action_add_checkin()
            </field>
        </record>

        <record id="hr_employee_add_checkout_action" model="ir.actions.server">
            <field name="name">Add Check-out</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="state">code</field>
            <field name="binding_model_id" ref="hr.model_hr_employee"/>
            <field name="binding_type">action</field>
            <field name="code">
                action = records.action_add_checkout()
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_hr_manual_attendance_root" name="Attendance By Manual" sequence="100"/>

        <menuitem id="menu_hr_manual_attendance" name="Manual Attendance"
                parent="hr_attendance.menu_hr_attendance_root" action="action_hr_employee_tree_manual"/>
    </data>
</odoo>