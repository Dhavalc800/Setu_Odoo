<odoo>
    <data>

        <!-- Wizard Form View -->
        <record id="view_project_task_import_wizard" model="ir.ui.view">
            <field name="name">project.task.import.wizard.form</field>
            <field name="model">project.task.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Tasks from CSV">
                    <group>
                        <group>
                            <field name="csv_file" widget="binary"/>
                            <field name="failed_csv_file" invisible="1"/>
                            <field name="failed_file_name" invisible="1"/>
                        </group>
                    </group>
                    <div>
                        <span class="fa fa-info-circle text-primary"
                                title="Click here to download a sample CSV file"></span>
                        <a href="/project_task_import/download_sample" target="_blank"
                            class="btn btn-link">
                            Click Here to Download Sample File
                        </a>
                    </div>
                    <footer>
                        <!-- Upload Task Button -->
                        <button name="action_upload_tasks" type="object" string="Upload Task" class="btn-primary"/>

                        <!-- Cancel Button -->
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_project_task_import_wizard" model="ir.actions.act_window">
            <field name="name">Import Tasks</field>
            <field name="res_model">project.task.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_project_task_import_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_project_tasks"
            name="Import Tasks"
            parent="project.menu_project_config"
            action="action_project_task_import_wizard"
            sequence="20"/>

    </data>
</odoo>
