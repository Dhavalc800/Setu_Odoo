<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of Reject Timesheet wizard -->
    <record id="wiz_view_reject_ts_form" model="ir.ui.view">
        <field name="name">wiz.view.reject.ts.form</field>
        <field name="model">wiz.reject.ts</field>
        <field name="arch" type="xml">
            <form string="Reject Timesheet">
                    <label string="Please fill up the reason to reject the timesheet"/>
                    <separator string="Reason"/>
                    <field name="reject_reason" required="1"/>
                <footer>
                    <button name="reject" string="Proceed" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
