                    <div class="container text-center">
                        <div class="row mt16 mb16 justify-content-center" style="margin: 0 -10px;">
                            <!-- INTRO Card (Sky Blue) -->
                            <div class="col-md-3" style="padding: 0 10px;">
                                <div class="card" style="height: 100%; background-color: #e1f5fe; border-left: 4px solid #03a9f4;">
                                    <div class="card-body text-center" style="padding: 15px;">
                                        <h2 class="card-title" style="margin: 0; font-size: 24px; font-weight: bold; color: #0288d1;">
                                            <field name="intro_count" style="display: block;" readonly="1"/> INTRO
                                        </h2>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Prospect Card (Green) -->
                            <div class="col-md-3" style="padding: 0 10px;">
                                <div class="card" style="height: 100%; background-color: #e8f5e9; border-left: 4px solid #4caf50;">
                                    <div class="card-body text-center" style="padding: 15px;">
                                        <h2 class="card-title" style="margin: 0; font-size: 24px; font-weight: bold; color: #388e3c;">
                                            <field name="prospect_count" style="display: block;" readonly="1"/> Prospect
                                        </h2>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Expected Revenue Card (Yellow) -->
                            <div class="col-md-3" style="padding: 0 10px;">
                                <div class="card" style="height: 100%; background-color: #fff8e1; border-left: 4px solid #ffc107;">
                                    <div class="card-body text-center" style="padding: 15px;">
                                        <h2 class="card-title" style="margin: 0; font-size: 24px; font-weight: bold; color: #ffa000;">
                                            <field name="expected_revenue_total" style="display: block;" readonly="1"/> Expected Revenue
                                        </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Time Off Requests Section -->
