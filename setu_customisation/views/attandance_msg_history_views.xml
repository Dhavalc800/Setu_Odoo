<odoo>
    <data>
        <record id="attandance_msg_historys_tree_view" model="ir.ui.view">
            <field name="name">attandance.msg.history.tree</field>
            <field name="model">attandance.msg.history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="message_date"/>
                    <field name="message_type"/>
                    <field name="half_day"/>
                    <field name="full_day"/>
                </tree>
            </field>
        </record>

        <record id="attandance_msg_historys_form_view" model="ir.ui.view">
            <field name="name">attandance.msg.history.form</field>
            <field name="model">attandance.msg.history</field>
            <field name="arch" type="xml">
                <form string="Attendance Message History">
                    <sheet>
                        <div class="oe_title">
                            <h1 class="d-flex flex-row">
                                <field name="name" placeholder="Employee's Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                            </h1>
                        </div>
                        <group>
                            <field name="employee_id"/>
                            <field name="message_date"/>
                            <field name="message_type"/>
                        </group>
                        <group>
                            <field name="message_content" widget="text"/>
                            <field name="half_day"/>
                            <field name="full_day"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_attandance_msg_history" model="ir.actions.act_window">
            <field name="name">Attandance Message History</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">attandance.msg.history</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="menu_attendance_msg_history"
            action="action_attandance_msg_history"
            parent="hr_attendance.menu_hr_attendance_root"
            groups="hr_attendance.group_hr_attendance_manager"
            sequence="15"/>
    </data>
</odoo>    