<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_list_export_xlsx')]" position="attributes">
            <attribute name="class" remove="btn-secondary" add="btn-white btn-dim btn-outline-light" separator=" "/>
        </xpath>
        <xpath expr="//button[hasclass('o_list_button_add')]" position="replace">
            <button type="button" class="btn btn-primary o_list_button_add" data-hotkey="c" t-on-click="onClickCreate" data-bounce-button="">
                <t t-call="os_theme_butterfly.IconButtonOwl">
                    <t t-set="icon" t-value="'plus'"/>
                    <t t-set="label">New</t>
                </t>
            </button>
        </xpath>
        <xpath expr="//button[hasclass('o_list_button_save')]" position="replace">
             <button type="button" class="btn btn-primary o_list_button_save" data-hotkey="s" t-on-click.stop="onClickSave">
                 <t t-call="os_theme_butterfly.IconButtonOwl">
                     <t t-set="icon" t-value="'save'"/>
                     <t t-set="label">Save</t>
                 </t>
             </button>
        </xpath>
        <xpath expr="//button[hasclass('o_list_button_discard')]" position="replace">
            <button type="button" class="btn btn-secondary o_list_button_discard" data-hotkey="j" t-on-click="onClickDiscard" t-on-mousedown="onMouseDownDiscard">
                <t t-call="os_theme_butterfly.IconButtonOwl">
                    <t t-set="icon" t-value="'cross'"/>
                    <t t-set="label">Discard</t>
                </t>
            </button>
        </xpath>
    </t>
</templates>