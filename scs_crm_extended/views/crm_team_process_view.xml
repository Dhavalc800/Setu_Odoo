<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_team_process_search" model="ir.ui.view">
        <field name="name">crm.team.process.search.view</field>
        <field name="model">crm.team.process</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="user_id"/>
            </search>
        </field>
    </record>

    <record id="crm_team_process_tree" model="ir.ui.view">
        <field name="name">crm.team.process.tree.view</field>
        <field name="model">crm.team.process</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="commission_id" string="Commission Plan"/>
                <field name="state" decoration-info="state in ('draft','submit')"
                       decoration-success="state == 'approve'" decoration-muted="state == 'reject'"/>
            </tree>
        </field>
    </record>

    <record id="crm_team_process_form" model="ir.ui.view">
        <field name="name">crm.team.process.form.view</field>
        <field name="model">crm.team.process</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" type="object" string="Submit" class="oe_highlight" states="draft"
                            groups="sales_team.group_sale_salesman_all_leads"/>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight" states="submit"
                            groups="sales_team.group_sale_manager"/>
                    <button name="action_reject" type="object" string="Reject" states="submit"
                            groups="sales_team.group_sale_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sales_team" string="Sales Team" type="object" icon="fa-users"
                                attrs="{'invisible':['|', ('state','!=', 'approve'), ('team_id','=', False)]}"
                                class="oe_stat_button"/>
                    </div>
                    <group string="Sales Team">
                        <field name="name" attrs="{'readonly': [('state', '!=', 'draft')]}" string="Sales Team Name"/>
                        <field name="user_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </group>
                    <group string="Commission Plan">
                        <field name="commission_id" string="Commission Plan"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"
                               options="{'no_create': True}"/>
                        <field name="team_id" invisible="1"/>
                    </group>
                    <label for="invoiced_target"/>
                    <div class="o_row">
                        <field name="invoiced_target" widget="monetary" options="{'currency_field': 'currency_id'}"
                               class="oe_inline"/>
                        <span class="flex-grow-1">/ Month</span>
                    </div>
                    <notebook>
                        <page string="Members" name="members_users">
                            <field name="member_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="avatar_128"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_card_content d-flex">
                                                    <div>
                                                        <img t-att-src="kanban_image('res.users', 'avatar_128', record.id.raw_value)" class="o_kanban_image o_image_64_cover" alt="Avatar"/>
                                                    </div>
                                                    <div class="oe_kanban_details d-flex flex-column ms-3">
                                                        <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                                        <div class="d-flex align-items-baseline text-break">
                                                            <i class="fa fa-envelope me-1" role="img" aria-label="Email" title="Email"/><field name="email"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_crm_team_process" model="ir.actions.act_window">
        <field name="name">Manage Sales Team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.team.process</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="scs_crm_extended.crm_team_process_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Sales Team Process Workflow!
            </p>
        </field>
    </record>

    <menuitem id="crm_menu_team_process"
              name="Manage Sales Team"
              parent="crm.crm_menu_root"
              action="action_crm_team_process"
              sequence="14"/>

</odoo>
