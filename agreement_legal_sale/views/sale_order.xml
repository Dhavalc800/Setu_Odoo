<odoo>

    <!-- Agreement Form View -->
    <record id="sale_order_agreement_form_view" model="ir.ui.view">
        <field name="name">sale.order.agreement.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="action_view_agreement_count" invisible="1"></field>
                <button type="object" name="action_view_agreement" 
                string="Agreements" class="oe_stat_button" icon="fa-pencil-square-o" 
                attrs="{'invisible': [('action_view_agreement_count', '=', 0)]}">
                    <field name="action_view_agreement_count" widget="statinfo" string="Agreements"/>
                </button>
            </xpath>
            <field name="payment_term_id" position="after">
                <field name="booking_type" required="1"/>
            </field>
            <!-- <xpath expr="//button[@name='action_cancel']" position="after">
                <button name="open_sale_agreement_wizard"
                            string="Create Agreement" class="oe_highlight"
                            type="object"
                            attrs="{'invisible': [('state', 'not in', ('done', 'sale'))]}"/>
            </xpath> -->
            
        </field>
    </record>

     <record id="qualification_criteria_task_form_view_inherit" model="ir.ui.view">
        <field name="name">qualification.criteria.task.form.view.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="sale_line_id" position="after">
                <field name="booking_type" string="Booking Type"/>
            </field>
        </field>
     </record>

</odoo>
