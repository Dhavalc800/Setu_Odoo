<odoo>
    <record id="view_customer_source_tree" model="ir.ui.view">
        <field name="name">customer.source.tree</field>
        <field name="model">customer.source</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_source_form" model="ir.ui.view">
        <field name="name">customer.source.form</field>
        <field name="model">customer.source</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_customer_source" model="ir.actions.act_window">
        <field name="name">Customer Source</field>
        <field name="res_model">customer.source</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Customer Source Found!
            </p>
        </field>
    </record>

    <menuitem id="menu_customer_source" name="Customer Source" parent="sale.menu_sale_config" action="action_customer_source" sequence="14"/>
</odoo>
