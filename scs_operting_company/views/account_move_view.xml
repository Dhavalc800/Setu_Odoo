<odoo>
    <record id="view_move_form_inherit_scs_operting_company" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <group id="header_left_group" position="inside">
                <field name="operating_company_id" force_save="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"/>
                <field name="einvoice_status" attrs="{'invisible': [
                ('move_type', 'not in', ['out_invoice'])
            ]}"/>
            <field name="status_updated_by" attrs="{'invisible': [
                ('move_type', 'not in', ['out_invoice'])
            ]}" readonly="1"/>
            </group>
<!--            <xpath expr="//group[@name='sale_info_group']/field[@name='partner_bank_id']" position="replace">-->
<!--&lt;!&ndash;                <attribute name="domain">[]</attribute>&ndash;&gt;-->

<!--            </xpath>-->
            <xpath expr="//group[@id='header_right_group']" position="inside">
                <field name="partner_bank_id" options="{'no_create': True, 'no_open': True}" context="{'default_partner_id': bank_partner_id}"
                       attrs="{'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
