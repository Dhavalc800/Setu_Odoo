<odoo>

    <record id="sale_inherit_form_view_scs_operting_compnay" model="ir.ui.view">
        <field name="name">sale.order.inherit.operting.compnay</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <group name="partner_details" position="inside">
                <field name="operating_company_id" force_save="1" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}" readonly="0" required="1" context="{'is_opc_m2o': True}"/>
            </group>
            <button id="create_invoice_percentage" position='attributes'>
                <attribute name="attrs">{'invisible': ['|',('invoice_status', '!=', 'no'), ('state',
                    'in', ('cancel','sale'))]}</attribute>
                <attribute name="groups">account.group_account_manager,account.group_account_invoice</attribute>
            </button>
            <button id="create_invoice" position="attributes">
                <attribute name="groups">account.group_account_manager,account.group_account_invoice</attribute>
            </button>
            <button id="action_confirm" position="attributes">
                <attribute name="groups">account.group_account_manager,account.group_account_invoice</attribute>
            </button>
            <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                <attribute name="groups">account.group_account_manager,account.group_account_invoice</attribute>
            </xpath>
            <group name="sale_total" position='inside'>
                <field name="payment_received_amount" attrs="{'invisible': [('payment_received_amount', '=', 0)]}" force_save="1"/>
                <field name="payment_pending"/>
            </group>
        </field>
    </record>

    <record id="view_quotation_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field name="payment_received_amount" sum="payment received total"/>
                <field name="payment_pending" />
            </field>
        </field>
    </record>

    <record id="view_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.view.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total" position="after">
                <field name="payment_received_amount" />
                <field name="payment_pending" />
            </field>
        </field>
    </record>

    <record id="sale.action_sale_order_generate_link" model="ir.actions.act_window">
        <field eval="[(4, ref('account.group_account_invoice'))]" name="groups_id"/>
    </record>

</odoo>
