<odoo>
    <record id="view_assign_closer_wizard_form" model="ir.ui.view">
        <field name="name">assign.closer.wizard.form</field>
        <field name="model">assign.closer.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Lead to Closer">
                <group>
                    <field name="closer_id"/>
                </group>
                <footer>
                    <button string="Assign" type="object" name="action_assign" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_assign_to_closer" model="ir.actions.server">
        <field name="name">Assign to Closer</field>
        <field name="model_id" ref="setu_dialer.model_branch_manager_assignment"/>
        <field name="binding_model_id" ref="setu_dialer.model_branch_manager_assignment"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_open_assign_colser_wizard()
        </field>
    </record>
</odoo>
