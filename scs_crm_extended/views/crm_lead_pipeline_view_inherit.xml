<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="crm_lead_form_view_inherit" model="ir.ui.view">
            <field name="name">crm.lead.pipeline.inherited.crm</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <field name="tag_ids" position="after">
                    <field name="amount" string="Payment Amount" attrs="{'readonly': [('is_editable', '!=', True)]}"/>
                </field>
                <field name="amount" position="after">
                    <field name="product_ids" string="Products" widget="many2many_tags"/>
                    <field name="is_editable" string="Is Editable" invisible="1"/>
                </field>
            </field>
    </record>
</odoo>