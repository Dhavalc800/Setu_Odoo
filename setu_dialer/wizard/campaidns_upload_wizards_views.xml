<odoo>
    <data>
        <record id="view_campaigns_upload_wizard_form" model="ir.ui.view">
            <field name="name">campaigns.upload.wizard.form</field>
            <field name="model">campaigns.upload.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload Users File" enctype="multipart/form-data">
                    <group>
                        <field name="file" filename="file_name"/>
                        <field name="file_name"/>
                        <field name="campaign_id" invisible="1"/>
                        <field name="select_method_upd" invisible="1"/>
                    </group>

                    <footer>
                        <button string="Import" type="object" name="import_file" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                        <button name="export_user_email_csv" attrs="{'invisible': [('select_method_upd', '!=', 'csv')]}" string="Download Sample CSV" type="object" class="btn-secondary"/>
                        <button name="export_user_email_excel" attrs="{'invisible': [('select_method_upd', '!=', 'excel')]}" string="Download Sample Excel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>