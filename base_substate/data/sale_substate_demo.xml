<?xml version="1.0" encoding="utf-8" ?>
<odoo >
    <data noupdate="1">

        <!--Sale Substate -->
        <record id="base_substate_new" model="base.substate">
            <field name="name">New</field>
            <field name="sequence">1</field>
            <field name="target_state_value_id" ref="target_state_value_draft" />
        </record>
        <record id="base_substate_proforma" model="base.substate">
            <field name="name">Proforma</field>
            <field name="sequence">2</field>
            <field name="target_state_value_id" ref="target_state_value_draft" />
        </record>

        <record id="base_substate_request_payment_verification" model="base.substate">
            <field name="name">Request For Payment Verification</field>
            <field name="sequence">3</field>
            <field name="target_state_value_id" ref="target_state_value_sent" />
        </record>
        <record id="base_substate_payment_verification" model="base.substate">
            <field name="name">Payment Under Verification</field>
            <field name="sequence">4</field>
            <field name="target_state_value_id" ref="target_state_value_sent" />
            <field name="mail_template_id" ref="mail_template_data_sale_substate_payment_verification"/>
        </record>
         <record id="base_substate_payment_received" model="base.substate">
            <field name="name">Payment Received</field>
            <field name="sequence">5</field>
            <field name="target_state_value_id" ref="target_state_value_sent" />
            <field name="mail_template_id" ref="mail_template_data_sale_substate_payment_received"/>
        </record>
        <record id="base_substate_won" model="base.substate">
            <field name="name">won</field>
            <field name="sequence">6</field>
            <field name="target_state_value_id" ref="target_state_value_sale" />
        </record>
         <record id="base_substate_lock" model="base.substate">
             <field name="name">lock</field>
            <field name="sequence">7</field>
            <field name="target_state_value_id" ref="target_state_value_lock" />
        </record>
        <record id="base_substate_lost" model="base.substate">
            <field name="name">Lost</field>
            <field name="sequence">8</field>
            <field name="target_state_value_id" ref="target_state_value_cancel" />
        </record>
    </data>
</odoo>
