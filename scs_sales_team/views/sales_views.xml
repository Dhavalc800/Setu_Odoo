<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem id="sale.sales_team_config"
            name="Sales Teams"
            action="sales_team.crm_team_action_config"
            parent="sale.sale_menu_root"
            groups="sales_team_security.group_sale_team_manager,sales_team_security.group_booking_branch_manager,sales_team.group_sale_manager"
            sequence="60"/>

    <record id="sales_team_form_view_in_crm_boolean" model="ir.ui.view">
        <field name="name">crm.team.form.inherit.boolean</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='branch_manager_id']" position="before">
                <field name="branch_boolean" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='branch_manager_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('branch_boolean', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
