<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Group Category: Call Management -->
    <record id="module_category_call_management" model="ir.module.category">
        <field name="name">Call Management</field>
        <field name="sequence">100</field>
    </record>

    <!-- Group: Call User -->
    <record id="group_call_user" model="res.groups">
        <field name="name">Call User</field>
        <field name="category_id" ref="setu_dialer.module_category_call_management"/>
    </record>

    <!-- Group: Call Admin -->
    <record id="group_call_admin" model="res.groups">
        <field name="name">Call Admin</field>
        <field name="category_id" ref="setu_dialer.module_category_call_management"/>
    </record>

    <record id="group_see_own_employee" model="res.groups">
        <field name="name">See Own Employee</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record model="ir.module.category" id="call_application_management">
        <field name="name">Telephony Access Control</field>
        <field name="description">Helps you manage call roles.</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_call_application" model="res.groups">
        <field name="name">Call From Application</field>
        <field name="category_id" ref="call_application_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="users" eval="[]"/>
    </record>

    <record id="group_call_mobile" model="res.groups">
        <field name="name">Call From CRM</field>
        <field name="category_id" ref="call_application_management"/>
        <field name="users" eval="[]"/>
    </record>

    <record id="group_lead_management" model="res.groups">
        <field name="name">Lead Management</field>
        <field name="category_id" ref="setu_dialer.module_category_call_management"/>
    </record>

    <record id="group_employee_closer_calling" model="res.groups">
        <field name="name">Closer Calling</field>
        <field name="category_id" ref="setu_dialer.module_category_call_management"/>
    </record>

    <record model="ir.module.category" id="list_lead_management">
        <field name="name">List Lead Management</field>
        <field name="description">Helps you manage call roles.</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_lead_admin" model="res.groups">
        <field name="name">Lead Admin</field>
        <field name="category_id" ref="setu_dialer.list_lead_management"/>
    </record>

    <record id="group_lead_user" model="res.groups">
        <field name="name">Lead User</field>
        <field name="category_id" ref="setu_dialer.list_lead_management"/>
    </record>

    <record id="group_audit_team" model="res.groups">
        <field name="name">Audit Team</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_hbab_admin" model="res.groups">
        <field name="name">HBAH Admin</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Group Category -->
    <record model="ir.module.category" id="module_category_pysical_meeting">
        <field name="name">Pysical Meeting</field>
        <field name="description">Access rights for Pysical Meeting roles</field>
        <field name="sequence">30</field>
    </record>

    <!-- User Group -->
    <record id="group_pysical_meeting_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_pysical_meeting"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Branch Manager Group -->
    <record id="group_pysical_meeting_manager" model="res.groups">
        <field name="name">Branch Manager</field>
        <field name="category_id" ref="module_category_pysical_meeting"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('group_pysical_meeting_user'))]"/>
    </record>

    <!-- Administrator Group -->
    <record id="group_pysical_meeting_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_pysical_meeting"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('group_pysical_meeting_user')), (4, ref('group_pysical_meeting_manager'))]"/>
    </record>

</odoo>
