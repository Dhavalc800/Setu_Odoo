<odoo>
    <record id="view_project_task_export_wizard" model="ir.ui.view">
        <field name="name">project.task.export.wizard</field>
        <field name="model">project.task.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Project Tasks to XLSX">
                <footer>
                    <button string="Download XLSX" type="object" name="export_project_tasks_xlsx" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
