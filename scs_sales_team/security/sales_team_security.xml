<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_team_tl_rule" model="ir.rule">
        <field name="name">Tl Sales Team</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team_security.group_sale_team_manager'))]"/>
    </record>

    <record id="sale_teams_branch_manager_team_rule" model="ir.rule">
        <field name="name">Branch Manager Sales Team</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[('branch_manager_id', '=', user.id),('branch_manager_id','!=',False)]</field>
        <field name="groups" eval="[(4, ref('sales_team_security.group_booking_branch_manager'))]"/>
    </record>

    <record id="sale_teams_admin_team_rule" model="ir.rule">
        <field name="name">All Teams</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>
</odoo>
