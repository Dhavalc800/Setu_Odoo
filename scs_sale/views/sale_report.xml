<odoo>

    <template id="sale_report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t" position="replace">
            <t t-call="web.basic_layout">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/>
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                <div class="page">
                    <!-- <t t-set="call_result" t-value="doc.action_operating_comp()"/> -->
                    <h2 class="mt-4">
                        <span t-if="env.context.get('proforma', False) or is_pro_forma">Pro-Forma Invoice # </span>
                        <span t-elif="doc.state in ['draft','sent']">Proforma Invoice # </span>
                        <span t-else="" align="center">Proforma Invoice # </span>
                    </h2>
                    <div class="oe_structure"/>
                    <t t-set="tax_totals" t-value="doc.tax_totals"/>
                    <table class="table table-sm table-bordered" style="border: 1px solid grey;border-color:grey;margin-top:5%;" width="100%;">
                        <tr>
                            <td class="text-start" rowspan="4">
                                <div class="clearfix">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <table class="table table-sm table-borderless">
                                                <!--<t t-set="operating_company" t-value="request.env['operating.company'].search([('partner_id', '=', doc.bank_acc_id.partner_id.id)])"/>-->
                                                <t t-set="operating_company" t-value="request.env['operating.company'].search([('id', '=', doc.operating_company_id.id)])"/>
                                                <t t-if="operating_company">
                                                    <tr>
                                                        <td>
                                                            <img t-if="operating_company.logo" t-att-src="image_data_uri(operating_company.logo)" style="max-width:100px;"/>
                                                        </td>
                                                        <td>
                                                            <span class="text-end">
                                                                <b>
                                                                    <span t-esc="operating_company.name"/>
                                                                </b>
                                                                <br/>
                                                                <span t-if="operating_company.street" t-esc='operating_company.street'/>
                                                                <br/>
                                                                <span t-if='operating_company.street2' t-esc='operating_company.street2'/>
                                                                <br/>
                                                                <span t-if='operating_company.city' t-esc='operating_company.city'/>
                                                                <span t-if='operating_company.state_id' t-esc='operating_company.state_id.name'/>
                                                                <span t-if='operating_company.zip' t-esc='operating_company.zip'/>
                                                                <span t-if='operating_company.country_id' t-esc='operating_company.country_id.name'/>
                                                                <span> GSTIN: <span t-if="operating_company.partner_id.vat" t-esc="operating_company.partner_id.vat"/>
                                                                </span>
                                                                <br/>
                                                                <span> PAN: <span t-if="operating_company.partner_id.l10n_in_pan" t-esc="operating_company.partner_id.l10n_in_pan"/>
                                                                </span>
                                                                <br/>
                                                                <span> State:<span t-if='operating_company.state_id' t-esc='operating_company.state_id.name'/>   Code:<span t-esc='operating_company.state_id.name'/>
                                                                </span>
                                                                <br/>
                                                                <span> CIN: <span t-if="operating_company.company_registry" t-esc="operating_company.company_registry"/>
                                                                </span>
                                                                <br/>
                                                                <span> Email: <span t-if="operating_company.email" t-esc="operating_company.email"/>
                                                                </span>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-else=''>
                                                    <tr>
                                                        <td>
                                                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="max-width:100px;"/>
                                                        </td>
                                                        <td>
                                                            <span class="text-end">
                                                                <b>
                                                                    <span t-field="doc.company_id"/>
                                                                </b>
                                                                <br/>
                                                                <span t-esc='doc.company_id.street'/>
                                                                <br/>
                                                                <span t-esc='doc.company_id.street2'/>
                                                                <br/>
                                                                <span t-esc='doc.company_id.city'/>
                                                                <span t-esc='doc.company_id.state_id.name'/>
                                                                <span t-esc='doc.company_id.zip'/>
                                                                <span t-esc='doc.company_id.country_id.name'/>
                                                                <br/>
                                                                <span> GSTIN: <span t-esc="doc.company_id.partner_id.vat"/>
                                                                </span>
                                                                <br/>
                                                                <span> PAN: <span t-if="operating_company.partner_id.l10n_in_pan" t-esc="operating_company.partner_id.l10n_in_pan"/>
                                                                </span>
                                                                <br/>
                                                                <span> State:<span t-esc='doc.company_id.state_id.name'/>   Code:<span t-esc='doc.company_id.state_id.name'/>
                                                                </span>
                                                                <br/>
                                                                <span> CIN: <span t-esc="doc.company_id.company_registry"/>
                                                                </span>
                                                                <br/>
                                                                <span> Email: <span t-esc="doc.company_id.email"/>
                                                                </span>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span>No. </span>
                                <b>
                                    <span t-esc="doc.name"/>
                                </b>
                            </td>
                            <td>
                                <span>Dated. </span>
                                <b>
                                    <span style="font-size:13px;" t-esc="datetime.date.today().strftime('%Y-%m-%d')"/>
                                </b>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;">
                                <span>Delivery Note.: </span>
                            </td>
                            <td style="width:20%;">
                                <span>Mode/ Terms of Payment.: </span>
                                <span t-field="doc.payment_term_id"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;">
                                <span>Reference No. &amp; Date: </span>
                                <span t-field="doc.origin"/>
                            </td>
                            <td style="width:20%;">
                                <span>Other Reference: </span>
                                <span t-field="doc.other_ref"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;">
                                <span>Buyer's Order No.:</span>
                                <span t-field="doc.client_order_ref"/>
                            </td>
                            <td style="width:20%;">
                                <span>Dated.: </span>
                                    <span t-field="doc.date"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50%;" rowspan="3">
                                <span>Buyer (Bill to):
                                </span>
                                <br/>
                                <span t-field="doc.partner_id.name"/>
                                <br/>
                                <t t-if="doc.partner_id.city">
                                    <span t-esc='doc.partner_id.city'/>
                                </t>
                                <br/>
                                <t t-if="doc.partner_id.vat">
                                    <span t-esc='doc.partner_id.vat'/>
                                </t>
                                <br/>
                                <t t-if="doc.partner_id.l10n_in_pan">
                                    <span t-esc='doc.partner_id.l10n_in_pan'/>
                                </t>
                                <br/>
                                <span>
                                    <t t-if="doc.partner_invoice_id">
                                        State: <span t-if="doc.partner_invoice_id.state_id" t-esc='doc.partner_invoice_id.state_id.name'/>
                                        Code: <span t-if="doc.partner_invoice_id.state_id" t-esc='doc.partner_invoice_id.state_id.code'/>
                                    </t> 
                                    <t t-else="">
                                        State: <span t-if="doc.partner_id.state_id" t-esc='doc.partner_id.state_id.name'/>
                                        Code: <span t-if="doc.partner_id.state_id" t-esc='doc.partner_id.state_id.name'/>
                                    </t>
                                </span>
                                <br/>
                                <span> Place to Supply:
                                    <t t-if="doc.partner_invoice_id">
                                        <span t-if="doc.partner_invoice_id.state_id" t-esc='doc.partner_invoice_id.state_id.name'/>
                                    </t>
                                    <t t-else="">
                                        <span t-if="doc.partner_id.state_id" t-esc='doc.partner_id.state_id.name'/>
                                    </t>
                                </span>
                            </td>
                            <td style="width:30%;">
                                <span>Dispatch Doc No.:</span>
                            </td>
                            <td style="width:20%;">
                                <span>Delivery Note Date:</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;">
                                <span>Dispatched Through:</span>
                            </td>
                            <td style="width:20%;">
                                <span>Destination:</span>
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%;" colspan="2">
                                <span>Terms of Delivery:</span>
                                <span t-field="doc.note"/>
                            </td>
                        </tr>
                    </table>

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
                    <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

                    <table class="table table-sm table-bordered mt-4">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_sr_no" class="text-start">SR No</th>
                                <th name="th_description" class="text-start">Description</th>
                                <th name="th_quantity" class="text-end">Quantity</th>
                                <th name="th_hsn_sac" class="text-end">HSN/SAC</th>
                                <th name="th_priceunit" class="text-end">Unit Price</th>
                                <th name="th_taxes" class="text-end">Taxes</th>
                                <th name="th_discount" t-if="display_discount" class="text-end">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_subtotal" class="text-end">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="line_total" t-value="0"/>
                            <t t-set="sr_no" t-value="0"/>
                            <t t-foreach="lines_to_report" t-as="line">
                                <t t-if="not line.display_type">
                                    <t t-set="sr_no" t-value="sr_no + 1"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </t>

                                <t t-set="line_total" t-value="line_total + line.price_total"/>

                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td>
                                            <span t-esc="sr_no"/>
                                        </td>
                                        <td name="td_name">
                                            <span t-field="line.name"/>
                                        </td>
                                        <td name="td_quantity" class="text-end">
                                            <span t-field="line.product_uom_qty"/>
                                        </td>
                                        <td name="td_hsn/sac" class="text-end">
                                            <span t-field="line.product_template_id.l10n_in_hsn_code"/>
                                        </td>
                                        <td name="td_priceunit" class="text-end">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td name="td_taxes" class="text-end">
                                            <span t-out="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                        </td>
                                        <td t-if="display_discount" class="text-end">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td t-if="not line.is_downpayment" name="td_subtotal" class="text-end o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-elif="line.display_type == 'line_section'">
                                        <td name="td_section_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-elif="line.display_type == 'line_note'">
                                        <td name="td_note_line" colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <t t-if="display_discount">
                                    <td class="text-end" colspan = "7">
                                        <b>Total</b>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="doc.currency_id.symbol"/><span t-esc="current_subtotal"/>
                                    </td>
                                </t>
                                <t t-else="not display_discount">
                                    <td class="text-end" colspan = "6">
                                        <b>Total</b>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="line_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </t>
                            </tr>
                            <tr>
                                <td colspan = "8">
                                    <b>Amount (In <span t-field="doc.currency_id.name"/>):</b> <span t-esc="doc.currency_id.amount_to_text(line_total)"/> only.
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table-sm table-bordered" style="border-color:grey;border: 1px solid grey;" width="100%;">
                        <tr>
                            <td rowspan="2">Taxable Value
                            </td>

                            <td colspan="2">
                                <span>Central Tax</span>
                            </td>
                            <td colspan="2">
                                <span>State Tax</span>
                            </td>
                            <td rowspan="2">Total Tax Amount</td>
                        </tr>
                        <tr>
                            <td>Rate</td>
                            <td>Amount</td>

                            <td>Rate</td>
                            <td>Amount</td>
                        </tr>
                        <tr t-foreach="lines_to_report.filtered(lambda l: not l.is_downpayment)" t-as="line">
                            <td>
                                <span t-esc="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                            <td>
                                <t t-foreach="line.tax_id.children_tax_ids" t-as="tax">
                                    <t t-if="tax.tax_group_id.name == 'CGST'">
                                        <t t-esc="tax.amount"/>
                                    </t>
                                </t>
                            </td>
                            <td>
                                <t t-foreach="line.tax_id.children_tax_ids" t-as="tax">
                                    <t t-if="tax.tax_group_id.name == 'CGST'">
                                        <span t-esc="(line.price_subtotal*tax.amount)/100"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </t>
                                </t>
                            </td>
                            <td>
                                <t t-foreach="line.tax_id.children_tax_ids" t-as="tax">
                                    <t t-if="tax.tax_group_id.name == 'SGST'">
                                        <t t-esc="tax.amount"/>
                                    </t>
                                </t>
                            </td>
                            <td>
                                <t t-foreach="line.tax_id.children_tax_ids" t-as="tax">
                                    <t t-if="tax.tax_group_id.name == 'SGST'">
                                        <span t-esc="(line.price_subtotal*tax.amount)/100"
                                            t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </t>
                                </t>
                            </td>
                            <td>
                                <span t-esc="line.price_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>

                    </table>
<!--                    <br/>-->
<!--                    <br/>-->

                    <span>Tax Amount(in words):
                        <t t-esc="doc.currency_id.amount_to_text(doc.amount_tax)"/>
                    </span>
