<odoo>
    <record id="payment_link_wizard_short_link" model="ir.ui.view">
        <field name="name">Payment.link.wizard.shortlink</field>
        <field name="model">payment.link.wizard</field>
        <field name="inherit_id" ref="payment.payment_link_wizard_view_form" />
        <field name="arch" type="xml">
            <field name="link" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="link" position="after">
                <field name="short_url_link" readonly="1" widget="CopyClipboardChar" />
            </field>
        </field>
    </record>
</odoo>