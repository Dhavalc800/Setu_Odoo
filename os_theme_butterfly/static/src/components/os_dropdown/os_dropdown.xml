<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="os_theme_butterfly.OS_Dropdown" owl="1">
        <div t-att-class="props.class"
            t-attf-class="
            {{ directionCaretClass || ''}}
            {{ state.open ? 'show' : ''}}
            {{ !showCaret ? 'o-dropdown--no-caret' : '' }}"
            t-ref="root">
          <a t-if="props.toggler !== 'parent'"
             class="dropdown-toggle"
             t-attf-class="
                    {{props.togglerClass || ''}}
                    {{parentDropdown ? 'dropdown-item' : ''}}"
             t-on-click.stop="onTogglerClick"
             t-on-mouseenter="onTogglerMouseEnter"
             t-att-title="props.title"
             t-att-data-hotkey="props.hotkey"
             t-att-data-tooltip="props.tooltip"
             t-att-tabindex="props.skipTogglerTabbing ? -1 : 0"
             t-att-aria-expanded="state.open ? 'true' : 'false'"
             t-ref="togglerRef">
            <t t-slot="toggler"/>
          </a>
            <div t-if="state.open" class="o-dropdown--menu dropdown-menu d-block" t-att-class="props.menuClass" t-ref="menuRef">
                <t t-slot="top_dropdwon"/>
                <t t-slot="default"/>
                <t t-slot="bottom_dropdwon"/>
          </div>
        </div>
    </t>
</templates>
